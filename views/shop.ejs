<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
 <link rel="stylesheet" href="/stylesheets/output.css">

    
</head>
<body>


  <%- include('partials/navbar') %>
     <div class="flex  ">
          <div class="features h-screen w-1/4 bg-zinc-400 px-10 ">
                  <div class="flex "> 
                      <label for="">Sort By</label>
                      <select name="" id="">
                        <option value="">Price</option>
                        <option value="">Popularity</option>
                      </select>
                  </div>
                  <div class="flex "> 
                      <label for="">Category:-</label>
                      <div class="flex flex-col">
                        <h3 class="font-semibold text-lg no-underline">Kid's Bag</h3>
                        <h3 class="font-semibold text-lg no-underline">Men's Bag</h3>
                        <h3 class="font-semibold text-lg no-underline">WOmen's Bag</h3>
                      </div>
                  </div>
          </div>
          <div class="product-listing h-screen w-3/4 bg-amber-100 gap-6 p-5 flex ">

            
                   <% products.forEach(function(product){  %>
                              <div class="product bg-zinc-200 rounded flex flex-col w-1/3 h-80 px-5 py-5 justify-between">
                       <img src="/images/<%=product.image.filename%>"  alt="" class="h-40 w-30 self-center">
                        
                        <div class="flex justify-between ">
                              <h3><%=product.name%></h3>
                              <h3>count</h3>
                        </div> 
                        <div class="flex justify-between ">
                              <h3>Total Price:</h3>
                              <h3><%=product.price%></h3>
                        </div>
                        <button class="bg-zinc-400 rounded px-1 py-1" >Delete</button>
                  <% }) %>
                       
            
                     </div>


                
          </div>
     </div>
    <%- include('partials/footer') %>
</body>
</html>








